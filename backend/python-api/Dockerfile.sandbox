FROM python:3.11-slim

# Install common libraries for data science and agent tasks
RUN pip install --no-cache-dir --prefer-binary \
    numpy \
    pandas \
    matplotlib \
    scipy \
    requests \
    beautifulsoup4 \
    scikit-learn \
    sympy \
    pillow \
    yfinance \
    openai \
    anthropic

WORKDIR /sandbox
